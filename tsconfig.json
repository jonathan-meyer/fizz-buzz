{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "dist/",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__tests__"]
}
